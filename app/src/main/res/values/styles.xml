<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#ffffff</item><!--toolbar标题字体颜色-->
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">#999999</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="NoActionBarDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
