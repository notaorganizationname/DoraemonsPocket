<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/news_recycle_img"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        android:id="@+id/news_recycle_title"
        android:layout_width="wrap_content"
        android:text="test title"
        android:layout_alignBottom="@id/news_recycle_img"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="2dp"
        android:textColor="#fff"
        android:textSize="@dimen/dp_10"
        android:id="@+id/news_author_name"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@id/news_recycle_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author_name"/>

    <TextView
        android:layout_marginBottom="2dp"
        android:textColor="#fff"
        android:textSize="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignBottom="@id/news_recycle_img"
        android:layout_toRightOf="@id/news_author_name"
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="news_date"/>

</RelativeLayout>